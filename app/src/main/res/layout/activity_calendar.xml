<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CalendarActivity">

    <LinearLayout
        android:id="@+id/TopBar"
        android:layout_width="462dp"
        android:layout_height="70dp"
        android:background="#2291FF"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="7dp"
            android:background="#2291FF"
            app:srcCompat="@drawable/calendar_studia_rightarrow"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btDate"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="4dp"
            android:background="#2291FF"
            android:fontFamily="@font/nanumsquareeb"
            android:text="2021/10/31"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/btNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:background="#2291FF"
            app:srcCompat="@drawable/calendar_studia_leftarrow"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/btProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/studia_brandcolor"
            app:srcCompat="@drawable/calendar_profile_img"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Note"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/verticalNote"
            android:layout_width="410dp"
            android:layout_height="193dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/calendar_todocategory"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/Memo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TopBar">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTodo"
                android:layout_width="370dp"
                android:layout_height="180dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="5dp" />

            <ImageButton
                android:id="@+id/btAddSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="355dp"
                android:layout_marginTop="-50dp"
                android:background="@drawable/calendar_studia_addbutton"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Memo"
        android:layout_width="416dp"
        android:layout_height="193dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/calendar_studia_category"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/verticalMemo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nanumsquareb"
                android:text="메모"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvShowMemo"
                        android:layout_width="372dp"
                        android:layout_height="127dp"
                        android:layout_marginLeft="20dp"
                        android:minLines="4"
                        android:textColor="@color/black" />
                </LinearLayout>
            </ScrollView>

            <ImageButton
                android:id="@+id/btEditMemo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="355dp"
                android:layout_marginTop="-50dp"
                android:background="@drawable/calendar_studia_editbutton"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Assign"
        android:layout_width="416dp"
        android:layout_height="193dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/calendar_studia_category"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/verticalAssign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nanumsquareb"
                android:text="과제 및 준비물"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvShowAssign"
                        android:layout_width="368dp"
                        android:layout_height="127dp"
                        android:layout_marginLeft="20dp"
                        android:minLines="4"
                        android:textColor="@color/black" />

                </LinearLayout>
            </ScrollView>

            <ImageButton
                android:id="@+id/btEditAssign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="355dp"
                android:layout_marginTop="-50dp"
                android:background="@drawable/calendar_studia_editbutton"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>