<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    /* Feedback, 각각의 View 혹은 Object를 보면 빨간 밑줄이 있는 것을 볼 수 있습니다. 이는 Constraints 설정을 하지 않아서 그렇습니다.
    이를 해결하기 위해서 Constraints를 Vertical과 Horizontal 모두 설정해 주어야합니다. 설정 방법은 임현우에게 문의 */

    <TextView
        android:id="@+id/tvIntroduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-450dp"
        android:layout_marginTop="-550dp"
        android:fontFamily="@font/nanumsquare_acb"
        android:lines="3"
        android:text="나만의\n독창적인 공부\n스타일 찾기"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/ivPassword"
        app:layout_constraintTop_toBottomOf="@+id/ivEmail" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="49dp"
        android:fontFamily="@font/nanumsquare_acr"
        android:text="로그인"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivEmail"
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:layout_marginStart="-95dp"
        android:layout_marginTop="29dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLogin"
        app:srcCompat="@drawable/email" />

    <ImageView
        android:id="@+id/ivPassword"
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:layout_marginStart="-95dp"
        android:layout_marginTop="-519dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivEmail"
        app:srcCompat="@drawable/email" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-408dp"
        android:layout_marginTop="373dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="이메일 주소"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/ivPassword"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-408dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toEndOf="@+id/ivPassword"
        app:layout_constraintTop_toBottomOf="@+id/etEmail"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/btLogin"
        android:layout_width="334dp"
        android:layout_height="97dp"
        android:layout_marginStart="-465dp"
        android:layout_marginTop="-70dp"
        android:onClick="loginRequest"
        app:layout_constraintStart_toEndOf="@+id/ivPassword"
        app:layout_constraintTop_toBottomOf="@+id/ivEmail"
        app:srcCompat="@drawable/login_loginbutton"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>