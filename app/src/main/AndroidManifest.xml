<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.web.studia_kr">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher_studia"
        android:label="STUDIA"
        android:roundIcon="@mipmap/ic_launcher_studia_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidStudia"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".NoteManagerActivity"
            android:exported="false" />
        <activity
            android:name=".DeleteAccount"
            android:exported="false" />
        <activity
            android:name="com.google.android.gms.oss.licenses.OssLicensesMenuActivity"
            android:theme="@style/Theme.OSS" />
        <activity
            android:name="com.google.android.gms.oss.licenses.OssLicensesActivity"
            android:theme="@style/Theme.OSS" />
        <activity
            android:name=".AppInfoActivity"
            android:exported="true" />
        <activity
            android:name=".PolicyActivity"
            android:exported="true" />
        <activity
            android:name=".PopupActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.Dialog" />
        <activity
            android:name=".MemoEditActivity"
            android:exported="true" />
        <activity
            android:name=".CalendarActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ScheduleActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="firebase_performance_logcat_enabled"
            android:value="true" />
    </application>

</manifest>